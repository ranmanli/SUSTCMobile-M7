<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cc.sustccs.sustcmobile.MainActivity"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/vpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/content_area"/>

    <RadioGroup
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/restaurant_btn_normal"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_btn_restaurant_normal" />

        <RadioButton
            android:id="@+id/box_btn_normal"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_btn_box_normal" />

        <RadioButton
            android:id="@+id/notification_btn_normal"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_btn_notification_normal" />

        <RadioButton
            android:id="@+id/explore_btn_normal"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_btn_explore_normal" />
    </RadioGroup>

    //bottom


</LinearLayout>
